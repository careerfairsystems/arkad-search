<html>
<head>
    <title>ARKAD search</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/yeti/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/style.css"/>
    <meta charset="utf-8">
    <meta name=viewport content="width= device-width">

</head>
<body>
    <div class="page">
        <div class="nav-container">
            <div class="nav-left-container"></div>
            <div class="nav-right-container">
                <a class="nav-button" href="./users"><i class="fa fa-user"></i></a>
                <form action='/logout' method='post' style="margin: 0;">
                    <button type="submit" class="nav-button"><i class="fa fa-sign-out"></i></button>
                </form>
            </div>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <div class="page-header">
                <div class="header-container">
                    <h1>Content for ARKAD search</h1>
                    <a class="add-button" href="./search"><i class="fa fa-plus"></i></a>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name:</th>
                        <th>Date:</th>
                        <th>Time:</th>
                        <th>Info:</th>
                    </tr>
                </thead>
                <% if (dbcontent) {
                    for (var i=0; i < dbcontent.length; i++) { %>
                    <tr>
                        <td><%= dbcontent[i].name %></td>
                        <td><% 
                            function convert(str) {
                                var date = new Date(str),
                                    mnth = ('0' + (date.getMonth() + 1)).slice(-2),
                                    day  = ('0' + date.getDate()).slice(-2);
                                return [ date.getFullYear(), mnth, day ].join('-');
                            }
                            %>
                            <%= convert(dbcontent[i].date) %>
                        </td>
                        <td><%= dbcontent[i].time %></td>
                        <td>
                            <textarea readonly class="form-control" rows="1" id="textArea" style = "resize:none"><%= dbcontent[i].info %></textarea>
                        </td>
                        <td class="entry-buttons">
                            <form class="form-style" method="get" action="/edit/<%= dbcontent[i].id %>">
                                <button type="submit" class="btn btn-primary">edit</button>
                            </form>
                            <form class="form-style" method="post" action="/delete/<%= dbcontent[i].id %>">
                                <button type="submit" class="btn btn-danger">delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }
                } %>
            </table>
        </div>
    </div>
</body>
</html>
